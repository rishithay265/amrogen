{
  "name": "amrogen",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:worker": "pnpm --filter worker dev",
    "build:web": "pnpm --filter web build",
    "build:worker": "pnpm --filter worker build",
    "start:web": "pnpm --filter web start",
    "start:worker": "pnpm --filter worker start",
    "lint:web": "pnpm --filter web lint",
    "db:generate": "pnpm --filter @amrogen/database generate",
    "db:migrate:sql": "pnpm --filter @amrogen/database exec -- prisma migrate deploy",
    "db:push": "pnpm --filter @amrogen/database exec -- prisma db push",
    "db:studio": "pnpm --filter @amrogen/database exec -- prisma studio",
    "build:packages": "pnpm --filter @amrogen/database build"
  }
}
